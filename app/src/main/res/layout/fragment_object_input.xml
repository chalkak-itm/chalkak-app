<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/input_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_magic_gradient">

    <!-- Header Area -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_small"
        android:paddingBottom="@dimen/padding_standard">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/bg_button_transparent_ripple"
            android:contentDescription="Back"
            android:padding="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="#FFFFFF"
            app:srcCompat="@android:drawable/ic_media_previous" />

        <ImageView
            android:id="@+id/img_mascot"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/main_character"
            android:contentDescription="Mascot" />

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="객체 이름 입력"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_mascot" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Main contents -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_standard"
        android:paddingRight="@dimen/padding_standard"
        android:paddingTop="8dp">

        <!-- Image card -->
        <LinearLayout
            android:id="@+id/card_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card_white_pure"
            android:padding="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_preview"
                android:layout_width="match_parent"
                android:layout_height="@dimen/image_preview_height"
                android:scaleType="fitCenter"
                android:contentDescription="Preview Image"
                android:src="@drawable/demo" />
        </LinearLayout>

        <!-- Description text -->
        <TextView
            android:id="@+id/txt_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="모델이 인식하지 못한 객체입니다.\n사진을 보면서 객체 이름을 입력해주세요."
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:gravity="center"
            android:lineSpacingExtra="4dp" />

        <!-- Input card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_card_white_pure"
            android:orientation="vertical"
            android:paddingLeft="@dimen/padding_small"
            android:paddingRight="@dimen/padding_small"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/txt_input_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="객체 이름"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <!-- Input field with circular arrow button inside -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edt_object_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="예: apple, dog, car..."
                    android:textColor="#333333"
                    android:textColorHint="#999999"
                    android:textSize="18sp"
                    android:paddingStart="16dp"
                    android:paddingEnd="60dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:background="@drawable/bg_card_white"
                    android:inputType="text"
                    android:maxLines="1"
                    android:imeOptions="actionDone"
                    android:singleLine="true" />

                <ImageButton
                    android:id="@+id/btn_confirm"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="end|center_vertical"
                    android:background="@drawable/bg_circle_medium_purple_ripple"
                    android:contentDescription="확인"
                    android:padding="12dp"
                    android:scaleType="fitCenter"
                    android:tint="#FFFFFF"
                    app:tint="#FFFFFF"
                    app:srcCompat="@android:drawable/ic_menu_send"
                    android:layout_marginEnd="8dp" />

            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

