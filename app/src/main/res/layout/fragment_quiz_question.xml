<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_magic_gradient"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_standard"
        android:paddingRight="@dimen/padding_standard"
        android:paddingTop="@dimen/padding_xlarge"
        android:paddingBottom="@dimen/padding_standard">

        <!-- Progress Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/padding_standard">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/txt_progress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1 / 3"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/text_size_small"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_progress_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="33%"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/text_size_small"
                    android:textStyle="bold" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/progress_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:max="100"
                android:progress="33"
                android:progressTint="#FFFFFF"
                android:progressBackgroundTint="#80FFFFFF" />
        </LinearLayout>

        <!-- Quiz Image and Word Info Card (initially shows only image, shows full info when answered correctly) -->
        <LinearLayout
            android:id="@+id/card_quiz_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:orientation="vertical"
            android:background="@drawable/bg_card_white_pure"
            android:padding="@dimen/padding_standard">

            <!-- Quiz Image -->
            <ImageView
                android:id="@+id/img_quiz"
                android:layout_width="match_parent"
                android:layout_height="@dimen/image_preview_height"
                android:scaleType="centerInside"
                android:contentDescription="Quiz Image"
                android:src="@drawable/egg" />

            <!-- Word Translation (initially hidden) -->
            <include
                android:id="@+id/layout_word_info"
                layout="@layout/card_word_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_large"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Quiz Options (4 buttons in 2x2 grid) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/padding_standard">

            <!-- First Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/btn_option_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/padding_small"
                    android:layout_marginBottom="@dimen/padding_small"
                    android:background="@drawable/bg_button_quiz_option_default"
                    android:clickable="true"
                    android:focusable="true"
                    android:minHeight="@dimen/icon_size_large"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_standard">

                    <TextView
                        android:id="@+id/txt_option_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="사과"
                        android:textColor="#333333"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/icon_option_1"
                        android:layout_width="@dimen/icon_size_small"
                        android:layout_height="@dimen/icon_size_small"
                        android:layout_marginStart="@dimen/padding_small"
                        android:visibility="gone"
                        android:contentDescription="Option Icon" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_option_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/padding_small"
                    android:layout_marginBottom="@dimen/padding_small"
                    android:background="@drawable/bg_button_quiz_option_default"
                    android:clickable="true"
                    android:focusable="true"
                    android:minHeight="@dimen/icon_size_large"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_standard">

                    <TextView
                        android:id="@+id/txt_option_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="바나나"
                        android:textColor="#333333"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/icon_option_2"
                        android:layout_width="@dimen/icon_size_small"
                        android:layout_height="@dimen/icon_size_small"
                        android:layout_marginStart="@dimen/padding_small"
                        android:visibility="gone"
                        android:contentDescription="Option Icon" />
                </LinearLayout>
            </LinearLayout>

            <!-- Second Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/btn_option_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="@dimen/padding_small"
                    android:background="@drawable/bg_button_quiz_option_default"
                    android:clickable="true"
                    android:focusable="true"
                    android:minHeight="@dimen/icon_size_large"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_standard">

                    <TextView
                        android:id="@+id/txt_option_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="오렌지"
                        android:textColor="#333333"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/icon_option_3"
                        android:layout_width="@dimen/icon_size_small"
                        android:layout_height="@dimen/icon_size_small"
                        android:layout_marginStart="@dimen/padding_small"
                        android:visibility="gone"
                        android:contentDescription="Option Icon" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_option_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="@dimen/padding_small"
                    android:background="@drawable/bg_button_quiz_option_default"
                    android:clickable="true"
                    android:focusable="true"
                    android:minHeight="@dimen/icon_size_large"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_standard">

                    <TextView
                        android:id="@+id/txt_option_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="포도"
                        android:textColor="#333333"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/icon_option_4"
                        android:layout_width="@dimen/icon_size_small"
                        android:layout_height="@dimen/icon_size_small"
                        android:layout_marginStart="@dimen/padding_small"
                        android:visibility="gone"
                        android:contentDescription="Option Icon" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Next Question Button (initially hidden) -->
        <LinearLayout
            android:id="@+id/btn_next_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button_purple_ripple"
            android:clickable="true"
            android:focusable="true"
            android:minHeight="@dimen/icon_size_large"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/padding_standard"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="다음 문제 →"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/text_size_body"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>

