<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/result_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_magic_gradient">

    <!-- Header Area -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_small"
        android:paddingBottom="@dimen/padding_standard">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="@dimen/icon_size_medium"
            android:layout_height="@dimen/icon_size_medium"
            android:layout_marginStart="@dimen/padding_standard"
            android:background="@drawable/bg_button_transparent_ripple"
            android:contentDescription="Back"
            android:padding="@dimen/padding_tiny"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="#FFFFFF"
            app:srcCompat="@android:drawable/ic_media_previous" />

        <ImageView
            android:id="@+id/img_mascot"
            android:layout_width="@dimen/mascot_size_small"
            android:layout_height="@dimen/mascot_size_small"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/main_character"
            android:contentDescription="Mascot" />

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_standard"
            android:text="Detection Result"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/text_size_title"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_mascot" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Main contents -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="vertical"
        android:paddingBottom="@dimen/bottom_nav_height">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/padding_standard"
            android:paddingRight="@dimen/padding_standard"
            android:paddingTop="@dimen/padding_small">

            <!-- image card of result -->
            <LinearLayout
                android:id="@+id/card_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card_white_pure"
                android:padding="@dimen/card_padding_small"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/frame_result_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/image_preview_height_large">

                <ImageView
                    android:id="@+id/img_result"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:contentDescription="Detection Result Image"
                    android:src="@drawable/demo" />

                <!-- Touch Area of card -->
                <FrameLayout
                    android:id="@+id/box_overlay_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@android:color/transparent" />
            </FrameLayout>

            <TextView
                android:id="@+id/txt_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_standard"
                android:layout_marginTop="@dimen/padding_small"
                android:layout_marginBottom="@dimen/padding_small"
                android:text="Tap a box to select an object!"
                android:textColor="#666666"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>


        <!-- Word buttons (all detected objects) -->
        <HorizontalScrollView
            android:id="@+id/scroll_object_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_small"
            android:scrollbars="none"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/layout_object_buttons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />
        </HorizontalScrollView>

            <!-- Detail card of word -->
            <include
                android:id="@+id/card_word_detail"
                layout="@layout/card_word_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_medium"
                android:visibility="gone" />

            <!-- Restart Magic Adventure Button -->
            <LinearLayout
                android:id="@+id/btn_restart_magic_adventure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_medium"
                android:layout_marginBottom="@dimen/padding_standard"
                android:background="@drawable/bg_button_purple_ripple"
                android:clickable="true"
                android:focusable="true"
                android:minHeight="@dimen/button_height_card"
                android:gravity="center"
                android:paddingLeft="@dimen/padding_small"
                android:paddingRight="@dimen/padding_small"
                android:paddingTop="@dimen/padding_standard"
                android:paddingBottom="@dimen/padding_standard"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/icon_size_large"
                    android:layout_height="@dimen/icon_size_large"
                    android:src="@drawable/camera"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"
                    android:contentDescription="Magic Adventure" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding_standard"
                    android:text="Restart Magic Adventure"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/text_size_large" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation Bar Container (Overlay) -->
    <LinearLayout
        android:id="@+id/bottom_nav_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_bottom_nav_container"
        android:elevation="@dimen/padding_standard">
        
        <!-- Bottom Navigation Bar -->
        <include
            android:id="@+id/bottom_nav_include"
            layout="@layout/bottom_navigation_bar" />
    </LinearLayout>

</LinearLayout>
