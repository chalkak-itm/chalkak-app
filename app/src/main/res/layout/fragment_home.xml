<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_magic_gradient">

    <!-- ìƒë‹¨ í™˜ì˜ ì„¹ì…˜ + í”ë“¤ê¸° ì•„ì´ì½˜/ì„¤ëª… -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="48dp">

        <!-- ê¸°ì¡´ í™˜ì˜ ë ˆì´ì•„ì›ƒ(ë§ˆìŠ¤ì½”íŠ¸ + í…ìŠ¤íŠ¸) -->
        <LinearLayout
            android:id="@+id/layoutWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:adjustViewBounds="true"
                android:contentDescription="Mascot"
                android:scaleType="centerInside"
                android:src="@drawable/main_character" />

            <TextView
                android:id="@+id/txtWelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome back,\nLeclerc"
                android:textColor="#FFFFFF"
                android:textSize="36sp"
                android:gravity="center"
                android:layout_marginTop="16dp" />
        </LinearLayout>

        <!-- ðŸ”” shaking ON/OFF Icon -->
        <LinearLayout
            android:id="@+id/layoutShakeIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/bg_shake_icon_off"
            android:padding="6dp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/imgShakeToggle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/shake"
                android:contentDescription="Shake to start" />

        </LinearLayout>

    </RelativeLayout>

    <!-- Magic Adventure ë²„íŠ¼ ì¹´ë“œ -->
    <LinearLayout
        android:id="@+id/btnMagicAdventure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_button_purple_ripple"
        android:clickable="true"
        android:focusable="true"
        android:minHeight="120dp"
        android:gravity="center"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/camera"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:contentDescription="Magic Camera" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Magic Adventure"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Review Progress ì¹´ë“œ -->
    <LinearLayout
        android:id="@+id/btnReviewProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_card_white_ripple"
        android:orientation="vertical"
        android:padding="16dp"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Review Progress"
            android:textColor="#8200DB"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtProgressLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8 / 12 words learned today!"
            android:textColor="#AD46FF"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />

        <ProgressBar
            android:id="@+id/progressWords"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:max="12"
            android:progress="8"
            android:progressDrawable="@drawable/progress_review" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp" />

</LinearLayout>

