<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/camera_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_magic_gradient">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_small"
        android:paddingBottom="@dimen/padding_standard">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="@dimen/icon_size_medium"
            android:layout_height="@dimen/icon_size_medium"
            android:layout_marginStart="@dimen/padding_standard"
            android:background="@drawable/bg_button_transparent_ripple"
            android:contentDescription="Back"
            android:padding="@dimen/padding_tiny"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="#FFFFFF"
            app:srcCompat="@android:drawable/ic_media_previous" />

        <ImageView
            android:id="@+id/img_mascot"
            android:layout_width="@dimen/mascot_size_small"
            android:layout_height="@dimen/mascot_size_small"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/main_character"
            android:contentDescription="Mascot" />

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_standard"
            android:text="Take Photo"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/text_size_title"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_mascot" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_standard"
        android:paddingRight="@dimen/padding_standard"
        android:paddingTop="@dimen/padding_small">

        <LinearLayout
            android:id="@+id/card_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card_white_pure"
            android:padding="@dimen/card_padding_small"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/image_preview_height">

                <ImageView
                    android:id="@+id/img_quiz"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:contentDescription="Captured Preview"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txt_no_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="No Image"
                    android:textColor="#999999"
                    android:textSize="@dimen/text_size_large"
                    android:gravity="center"
                    android:visibility="visible" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/padding_medium">

            <TextView
                android:id="@+id/btn_capture"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minHeight="@dimen/button_height_standard"
                android:background="@drawable/bg_button_purple_ripple"
                android:clickable="true"
                android:focusable="true"
                android:padding="@dimen/padding_medium"
                android:text="Upload"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/text_size_body"
                android:gravity="center" />

            <TextView
                android:id="@+id/btn_retake"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/padding_small"
                android:minHeight="@dimen/button_height_standard"
                android:background="@drawable/bg_button_purple_ripple"
                android:clickable="true"
                android:focusable="true"
                android:padding="@dimen/padding_medium"
                android:text="Retake"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/text_size_body"
                android:gravity="center" />
        </LinearLayout>

        <TextView
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_small"
            android:minHeight="@dimen/button_height_standard"
            android:background="@drawable/bg_button_purple_ripple"
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/padding_medium"
            android:text="Use Photo"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/text_size_body"
            android:gravity="center" />
    </LinearLayout>

    <!-- Bottom Navigation Bar Container (Overlay) -->
    <LinearLayout
        android:id="@+id/bottom_nav_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_bottom_nav_container"
        android:elevation="@dimen/padding_standard">
        
        <!-- Bottom Navigation Bar -->
        <include
            android:id="@+id/bottom_nav_include"
            layout="@layout/bottom_navigation_bar" />
    </LinearLayout>

</LinearLayout>


