<?xml version="1.0" encoding="utf-8"?>
<!-- Common word detail card layout -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_card_white_pure"
    android:padding="16dp">

    <!-- Word + TTS Icon -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/txt_selected_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="word"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/btn_tts_word"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/speaker"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Play audio" />
    </LinearLayout>

    <!-- Korean Meaning + Record/Play Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/txt_korean_meaning"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Meaning"
            android:textColor="#555555"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/btn_record_meaning"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_mic"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Start speech recognition" />
    </LinearLayout>

    <!-- Example + TTS Icon -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Example sentence"
            android:textColor="#777777"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/btn_tts_example"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/speaker"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Play audio" />
    </LinearLayout>

    <!-- Example Sentence + Record/Play Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/txt_example_sentence"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Example sentence here"
            android:textColor="#555555"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/btn_record_example"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_mic"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Start speech recognition" />
    </LinearLayout>
</LinearLayout>

